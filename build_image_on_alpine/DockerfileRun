# Build stage
FROM deps_image_alpine AS builder
WORKDIR /app
COPY . .
RUN export GOPROXY=https://goproxy.cn/ \
  && export PATH="$PATH:$HOME/bin" \
  && bazel run //ziwiki:gazelle \
  && bazel run //ziwiki:gazelle -- update-repos -from_file=ziwiki/go.mod -to_macro=deps.bzl%go_dependencies \
  && bazel run //ziwiki:gazelle \
  && bazel build //ziwiki/cmd/server:all 

# Run stage
FROM alpine:3.16
WORKDIR /app
COPY --from=builder /app/bazel-bin/ziwiki/cmd/server/server_/server .
COPY ./build_image_on_alpine/migrate.linux-amd64 /usr/bin/migrate
COPY ziwiki/app.env .
COPY ziwiki/start.sh .
COPY ziwiki/wait-for.sh .
COPY ziwiki/db/migration migration
RUN chmod +x ./start.sh \
  && chmod +x ./wait-for.sh 
EXPOSE 8080
CMD [ "/app/server" ]
ENTRYPOINT [ "/app/start.sh" ]