# Build stage
FROM gazelle_image_alpine AS builder
WORKDIR /app
COPY . .
RUN export GOPROXY=https://goproxy.cn/ \
  && export PATH="$PATH:$HOME/bin" \
  && bazel run //:gazelle \
  && bazel run //:gazelle -- update-repos -from_file=go.mod -to_macro=deps.bzl%go_dependencies \
  && bazel run //:gazelle \
  && bazel build //:all \ 
  && bazel build //srccpp:all 

# Run stage
FROM alpine:3.16
WORKDIR /app
COPY --from=builder /app/bazel-bin/ziwiki_/ziwiki .
COPY ./build_image_on_ubuntu/migrate.linux-amd64 /usr/bin/migrate
COPY app.env .
COPY start.sh .
COPY wait-for.sh .
COPY db/migration migration
RUN chmod +x ./start.sh \
  && chmod +x ./wait-for.sh 
EXPOSE 8080
CMD [ "/app/ziwiki" ]
ENTRYPOINT [ "/app/start.sh" ]